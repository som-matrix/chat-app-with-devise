<div class="flex justify-between items-center py-4 px-12">
  <span class="text-lg font-bold">Chat</span>
  <div class="flex items-center gap-[8px]">
    <% if user_signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar.variant(:thumb), class: "rounded-full  h-[50px] w-[50px]" %>
      <%else%>
        <%= image_tag "https://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(current_user.email)}", class: "rounded-full h-[50px] w-[50px]" %>
      <%end%>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "bg-blue-400 px-4 py-2 rounded-lg" %>
      <%= link_to "Register", new_user_registration_path, class: "bg-gray-400 px-4 py-2 rounded-lg" %>
    <% end %>
  </div>
</div>
