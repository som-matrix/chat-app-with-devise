<div class="flex flex-col justify-center items-center gap-4 w-full">
  <h1 class="font-bold text-4xl">Welcome to the chat room</h1>
  <%= turbo_frame_tag "new_room_create" do %>
    <%= link_to "New room", new_chat_room_path, class: "bg-black py-2 px-4 text-white rounded-lg" %>
    <ul class="flex flex-col gap-4">
      <% @chat_rooms.each do |chat_room| %>
        <%= turbo_frame_tag "message_box" do %>
          <li>
            <h2>
              <%= chat_room.name%>
            </h2>
            <p>
              <%= chat_room.description%>
            </p>
            <%= link_to "Chat", new_message_path, class: "bg-black py-2 px-4 text-white rounded-lg" %>
          </li>
        <%end%>
      <%end%>
    </div>
  <%end%>
</div>
